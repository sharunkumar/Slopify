{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Slopify",
  "version": "0.4.2",
  "identifier": "com.slopify.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Slopify | v0.4.2",
        "minWidth": 900,
        "minHeight": 800,
        "center": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQwNzBCNUYxNUMwQTJDNDYKUldSR0xBcGM4YlZ3UU55WnFKSU1zM3JOUHUwTE5VbnhmRFo0NzhoTzJiMXcwQ0hxOS8xdHdSSzcK",
      "endpoints": [
        "https://github.com/DishpitDev/Slopify/releases/latest/download/latest.json"
      ]
    }
  }
}
